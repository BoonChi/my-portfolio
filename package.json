{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "rootDir": ".",
  "homepage": "http://BoonChi.github.io/my-portfolio",
  "main": "index.page.tsx",
  "scripts": {
    "predev": "tsc",
    "prettier:base": "prettier --ignore-path .gitignore",
    "dev": "next dev",
    "build": "next build && next export -o build && cp .nojekyll build/.nojekyll && tsc",
    "export": "next export",
    "start": "npm run build && next start",
    "lint": "next lint && npm run format:prettier",
    "dev:test": "jest --watch",
    "dev:test:coverage": "jest --coverage",
    "test": "jest",
    "test:e2e": "playwright test",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build -t true",
    "prestart": "tsc",
    "format:prettier": "npm run prettier:base -- --write \"**/*.{js,ts,tsx,json,md,mdx}\""
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@reduxjs/toolkit": "^1.6.2",
    "bootstrap": "^5.1.3",
    "next": "^12.0.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "sass": "^1.49.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.18.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.21",
    "eslint": "^8.7.0",
    "eslint-config-next": "12.0.8",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.2.3",
    "jest": "^27.4.7",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4",
    "url-loader": "^4.1.1"
  }
}
